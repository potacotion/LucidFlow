generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  pwdHash String
  role  UserRoles @default(Standard)

  @@map("users")
}

enum UserRoles {
  Standard
  Admin
}
// 文件夹表
model Folder {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parentId String?
  parent   Folder?  @relation("FolderChildren", fields: [parentId], references: [id])
  children Folder[] @relation("FolderChildren")

  workflows Workflow[]

  @@map("folders")
}

// 工作流表
// 整个工作流的结构，包括节点和边，都存储在'data'字段中
model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // 将整个 WorkflowData 对象（包括节点和边）序列化为 JSON 存储
  data        Json
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  folderId String?
  folder   Folder? @relation(fields: [folderId], references: [id])

  @@map("workflows")
}