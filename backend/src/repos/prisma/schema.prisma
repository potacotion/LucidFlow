generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id       Int          @id @default(autoincrement())
  name     String
  email    String       @unique
  pwdHash  String
  settings UserSettings?
  roles    RolesOnUsers[]

  @@map("users")
}

// Role model
model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users RolesOnUsers[]

  @@map("roles")
}

// Explicit many-to-many relation table
model RolesOnUsers {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, roleId])
}

// 用户个人设置
model UserSettings {
  userId Int      @id
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  data   Json
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_settings")
}

// 文件夹表
model Folder {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parentId String?
  parent   Folder?  @relation("FolderChildren", fields: [parentId], references: [id])
  children Folder[] @relation("FolderChildren")

  workflows Workflow[]

  @@map("folders")
}

// 工作流表
// 整个工作流的结构，包括节点和边，都存储在'data'字段中
model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // 将整个 WorkflowData 对象（包括节点和边）序列化为 JSON 存储
  data        Json
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  folderId String?
  folder   Folder? @relation(fields: [folderId], references: [id])

  @@map("workflows")
}